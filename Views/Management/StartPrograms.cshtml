@model IEnumerable<DESAFIO.MVC.Models.StartProgram>

<h2>Start Programs</h2>
<hr>
<a asp-controller="Management" asp-action="NewStartProgram" class="btn btn-success">New Start Program</a>
<hr>

<script>
    $(document).ready( function () 
    {
        $('#programs').DataTable();
    });
</script>

<table id="programs" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var program in Model)
        {
            <tr>
                <td>@program.Id</td>
                <td>@program.Name</td>
                <td>@program.StartDate.ToShortDateString()</td>
                <td>@program.EndDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-primary" href="/Management/EditStartProgram/@program.Id">Edit</a>  
                                   
                    <form asp-action="Delete" asp-controller="StartPrograms" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@program.Id">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
