@model DESAFIO.MVC.Models.Module

<h3>New Module</h3>
<hr>

<form class="form-horizontal" asp-controller="Modules" asp-action="Save" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Name">Name</label><br>
    <span asp-validation-for="Name"></span>
    <input type="text" class="form-control" asp-for="Name" placeholder="Module name"><br>
        
    <button class="btn btn-success">Add</button>
    <a class="btn btn-primary" href="/Management/Modules">Back</a>
</form>