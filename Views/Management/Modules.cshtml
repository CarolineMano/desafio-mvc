@model IEnumerable<DESAFIO.MVC.Models.Module>

<h2>Modules</h2>
<hr>
<a asp-controller="Management" asp-action="NewModule" class="btn btn-success">New Module</a>
<hr>

<script>
    $(document).ready( function () 
    {
        $('#modules').DataTable();
    });
</script>

<table id="modules" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var module in Model)
        {
            <tr>
                <td>@module.Id</td>
                <td>@module.Name</td>
                <td>
                    <a class="btn btn-primary" href="/Management/EditModule/@module.Id">Edit</a>                                                                  
                    <form asp-action="Delete" asp-controller="Modules" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@module.Id">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>