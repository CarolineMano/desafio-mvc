@model DESAFIO.MVC.Models.Technology

<h3>New Technology</h3>
<hr>

<form class="form-horizontal" asp-controller="Technologies" asp-action="Save" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Name">Name</label><br>
    <span asp-validation-for="Name"></span>
    <input type="text" class="form-control" asp-for="Name" placeholder="Technology name">    

    <br><label asp-for="Description">Description</label><br>
    <span asp-validation-for="Description"></span>
    <input type="text" class="form-control" asp-for="Description" placeholder="Description of the technology"><br>
    
    <button class="btn btn-success">Add</button>
    <a class="btn btn-primary" href="/Management/Technologies">Back</a>
</form>