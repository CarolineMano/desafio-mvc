@model IEnumerable<DESAFIO.MVC.Models.Technology>

<h2>Technologies</h2>
<hr>
<a asp-controller="Management" asp-action="NewTechnology" class="btn btn-success">New Technology</a>
<hr>

<script>
    $(document).ready( function () 
    {
        $('#technologies').DataTable();
    });
</script>

<table id="technologies" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var technology in Model)
        {
            <tr>
                <td>@technology.Id</td>
                <td>@technology.Name</td>
                <td>@technology.Description</td>
                <td>
                    <a class="btn btn-primary" href="/Management/EditTechnology/@technology.Id">Edit</a>                 
                    <form asp-action="Delete" asp-controller="Technologies" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@technology.Id">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
